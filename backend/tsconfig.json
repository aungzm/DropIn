{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "baseUrl": "./"
  },
  "include": ["*.ts", "**/*.ts", "controllers/fileController.ts"],
  "exclude": ["node_modules", "dist"]
}